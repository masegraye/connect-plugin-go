FROM golang:1.21-alpine AS builder
WORKDIR /build
COPY go.mod go.sum ./
RUN go mod download
COPY . .
RUN CGO_ENABLED=0 GOOS=linux go build -o logger-plugin ./examples/logger-plugin

FROM alpine:latest
RUN apk --no-cache add ca-certificates
WORKDIR /app
COPY --from=builder /build/logger-plugin .
EXPOSE 8081
ENV PORT=8081
CMD ["./logger-plugin"]
